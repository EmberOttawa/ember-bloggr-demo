<div class="container-fluid">
  <div class="row">

    <div class="col-md-3 col-sm-3 col-xs-4">
      <h4>Recent Posts</h4>
      <ul class="nav nav-pills">

        {{#each model}}
          <li>
            {{#link-to 'posts.post' this}}
              {{title}} <small class='text-muted'>by {{author.name}}</small>
            {{/link-to}}
          </li>
        {{/each}}

      </ul>
    </div>

    <div class="col-md-9 col-sm-9 col-xs-8">
      {{outlet}}
    </div>

  </div>
</div>